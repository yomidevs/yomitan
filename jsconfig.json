{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "checkJs": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "suppressImplicitAnyIndexErrors": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./types/ext/*"],
            "ext/json-schema": ["./types/ext/json-schema"]
        },
        "types": [
            "chrome",
            "firefox-webext-browser",
            "handlebars",
            "jszip",
            "parse5",
            "wanakana",
            "zip.js",
            "dexie",
            "ajv"
        ]
    },
    "include": [
        "ext/**/*.js",
        "types/ext/**/*.ts",
        "types/other/globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "ext/lib"
    ]
}
